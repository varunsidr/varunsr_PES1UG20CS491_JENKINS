pipeline{
  agent any
  stages{
    stage('Build'){
    steps{
    sh 'g++ -c PES1UG20CS491.cpp'
    sh 'g++ -o PES1UG20CS491 PES1UG20CS491.cpp'
    echo 'Build Done Succesfully'
   }
  }
  stage('Test'){
    steps{
      sh './PES1UG20CS491'
      echo 'Test Done Succesfully'
     }
    }
    stage('Deploy'){
    steps{
    echo 'Deployment Done Successful'
    }
   }
  }
  post{
    failure{
    echo 'Pipeline Failure'
   }
  }
 }
  
